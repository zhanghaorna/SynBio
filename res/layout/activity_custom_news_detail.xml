<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    >
    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:id="@+id/news_icon_layout">
        <ImageView
          android:id="@+id/news_listview_icon"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:adjustViewBounds="true"
          android:scaleType="centerCrop" />

        <ProgressBar
          android:id="@+id/news_listview_progress"
          android:layout_width="match_parent"
          android:layout_height="10dp"
          android:indeterminate="false"
          android:max="100"
          android:layout_gravity="bottom"
          android:visibility="gone"
          style="@android:style/Widget.Holo.ProgressBar.Horizontal" />
        
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_toLeftOf="@id/news_icon_layout"
        android:layout_alignParentLeft="true">

        <TextView android:id="@+id/news_listview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal" />

        <TextView android:id="@+id/news_listview_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_listview_title"
            android:layout_alignStart="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:ellipsize="end"
            android:maxLines="2" />
        
        
        
        


    </RelativeLayout>
    
    

</RelativeLayout>