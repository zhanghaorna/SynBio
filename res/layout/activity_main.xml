<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_activity_background">
    
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_button_host">"
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linearlayout_rxnfinder_buttongroup">
            <ImageButton 
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/rxnfinder"
                android:scaleType="fitCenter"
                android:background="@drawable/main_activity_tab_button" 
                android:id="@+id/mainactivity_rxnfinder"></ImageButton>
            
           
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ToggleButton
                    android:id="@+id/rxnfinder_toggle" 
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"                    
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    />
                <ImageView 
                    android:id="@+id/rxnfinder_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_alignLeft="@+id/rxnfinder_toggle"
                    android:src="@drawable/toggle_switch"/>
                
            </RelativeLayout>
        </LinearLayout>
        
        
        
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linearlayout_news_buttongroup">
            <ImageButton 
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/news"
                android:scaleType="fitCenter"
                android:background="@drawable/main_activity_tab_button" 
                android:id="@+id/mainactivity_news"></ImageButton>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ToggleButton
                    android:id="@+id/news_toggle" 
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    />
                <ImageView
                    android:id="@+id/news_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_alignRight="@+id/news_toggle"
                    android:src="@drawable/toggle_switch"/>  
            </RelativeLayout>                
        </LinearLayout>
        
         
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/linearlayout_resource_buttongroup">
            <ImageButton 
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:src="@drawable/resource"
                android:scaleType="fitCenter"
                android:background="@drawable/main_activity_tab_button" 
                android:id="@+id/mainactivity_resource"></ImageButton>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">            
                <ToggleButton
                    android:id="@+id/resource_toggle" 
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    />
                <ImageView 
                    android:id="@+id/resource_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:background="#00000000"
                    android:layout_alignRight="@+id/resource_toggle"
                    android:src="@drawable/toggle_switch"/>            
            </RelativeLayout>
        </LinearLayout>
        
        
    </LinearLayout >
    
    
    
   <!--  android:background="@drawable/base_action_bar_bg"  
    <com.viewpagerindicator.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        />   -->
   
     <android.support.v4.view.ViewPager
              android:id="@+id/pager"
              android:layout_width="fill_parent"
              android:layout_height="0dp"
              android:layout_weight="1"/>
        


</LinearLayout>
    

   
